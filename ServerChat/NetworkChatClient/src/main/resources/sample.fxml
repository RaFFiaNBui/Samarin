<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="5.0" style="-fx-background-color: silver; -fx-border-color: blue;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.controller.Controller">
   <children>
      <TextArea fx:id="chatTextArea" editable="false" prefHeight="344.0" prefWidth="560.0" style="-fx-border-color: blue; -fx-border-radius: 5; -fx-border-width: 1;" wrapText="true" />
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="messageText" onAction="#sendText" HBox.hgrow="ALWAYS" style="-fx-border-color: blue; -fx-border-radius: 5;" />
            <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#sendMessage" minWidth="100.0" style="-fx-background-color: lightblue; -fx-border-color: blue; -fx-border-radius: 5;" text="Отправить">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5" left="5" right="5" top="5" />
   </padding>
</VBox>
